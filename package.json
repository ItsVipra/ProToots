{
	"name": "protoots",
	"scripts": {
		"build:scripts": "node scripts/build.mjs",
		"build:webext": "web-ext build --overwrite-dest --filename protoots-firefox.zip",
		"start": "run-p -l -r watch:scripts watch:webext-firefox",
		"start:chrome": "run-p -l -r watch:scripts watch:webext-chrome",
		"watch:scripts": "node scripts/watch.mjs",
		"watch:webext-firefox": "web-ext run --keep-profile-changes --profile-create-if-missing --firefox-profile=.firefox-profile/",
		"watch:webext-chrome": "web-ext run --target chromium  --keep-profile-changes --profile-create-if-missing --chromium-profile=.chromium-profile/",
		"format": "prettier --write --ignore-path .gitignore .",
		"package": "run-s -l build:**",
		"archive": "git archive --format zip main -o protoots_source.zip",
		"lint": "eslint src/",
		"test": "uvu tests/"
	},
	"devDependencies": {
		"@sprout2000/esbuild-copy-plugin": "1.1.8",
		"esbuild": "0.17.19",
		"eslint": "^8.42.0",
		"eslint-config-prettier": "^8.8.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.8",
		"uvu": "^0.5.6",
		"web-ext": "^7.6.2"
	},
	"prettier": {
		"endOfLine": "lf",
		"printWidth": 100,
		"useTabs": true,
		"trailingComma": "all"
	},
	"type": "module",
	"webExt": {
		"sourceDir": "dist/"
	},
	"dependencies": {
		"sanitize-html": "^2.11.0",
		"webextension-polyfill": "^0.10.0"
	}
}
